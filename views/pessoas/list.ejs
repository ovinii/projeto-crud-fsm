<% include ../partials/header.ejs %>
    
    <h1>Pessoas</h1>
    <p><a href="/pessoas/create">Nova Pessoa</a></p>
    <table class='table table-striped table-hover table-bordered mt-4'>
        <tr>
        <th>NOME</th>
        <th>AÇÕES</th>
        </tr>
        <% pessoas.map(pessoa => { %>
        <tr>
        <td><%= pessoa.nome %></td>
        <td>
        <div class="btn-group" role="group" aria-label="Basic example">
            <a type="button" class="btn btn-outline-secondary" href="/pessoas/update/<%= pessoa.id %>">Editar</a>
            <a type="button" class="btn btn-outline-secondary" href="/pessoas/delete/<%= pessoa.id %>" onclick="return confirm('Deseja excluir?')">Excluir</a>
        </div>
        </td>
        </tr>
        <% }) %>
    </table>
    
  <% include ../partials/footer.ejs %>