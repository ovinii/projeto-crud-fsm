<% include ../partials/header.ejs %>
    <main role="main" class="container">
    <h1>Editar Pessoa</h1>
    <p><a href="/pessoas">Voltar</a></p>
    <form method="post">
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="name" class="form-control" id="nome" name="nome" placeholder="Enter name" value="<%= pessoa.nome %>">
      <small id="emailHelp" class="form-text text-muted">Digite seu nome.</small>
    </div>
    <div class="form-group">
      <label for="nascimento">Nascimento</label>
      <input type="name" class="form-control" id="nascimento" name="nascimento" placeholder="Enter birthday" value="<%= pessoa.nascimento %>">
      <small id="emailHelp" class="form-text text-muted">Digite sua data de nascimento.</small>
    </div>
    <div class="form-group">
      <label for="cargo">Cargo</label>
      <input type="cargo" class="form-control" id="cargo" name="cargo" placeholder="Enter cargo" value="<%= pessoa.cargo %>">
      <small id="emailHelp" class="form-text text-muted">Digite seu cargo.</small>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Salvar</button>
</form>
</main>
<% include ../partials/footer.ejs %>